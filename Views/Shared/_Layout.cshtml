<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - cutypai</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/cutypai.styles.css" asp-append-version="true"/>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
<header>
    <nav class="bg-white border-b shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <div class="flex-shrink-0 flex items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-blue-600">cutypai</a>
                </div>
                <div class="hidden md:flex space-x-6">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-700 hover:text-blue-600 font-medium">Privacy</a>
                    <a asp-area="" asp-controller="Auth" asp-action="Login" class="text-gray-700 hover:text-blue-600 font-medium">Login</a>
                    <a asp-area="" asp-controller="Auth" asp-action="Signup" class="text-gray-700 hover:text-blue-600 font-medium">Signup</a>
                </div>
                <div class="md:hidden flex items-center">
                    <button id="mobile-menu-button" class="text-gray-700 hover:text-blue-600 focus:outline-none">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="block py-2 text-gray-700 hover:text-blue-600 font-medium">Home</a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="block py-2 text-gray-700 hover:text-blue-600 font-medium">Privacy</a>
            <a asp-area="" asp-controller="Auth" asp-action="Login" class="block py-2 text-gray-700 hover:text-blue-600 font-medium">Login</a>
            <a asp-area="" asp-controller="Auth" asp-action="Signup" class="block py-2 text-gray-700 hover:text-blue-600 font-medium">Signup</a>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const btn = document.getElementById('mobile-menu-button');
                const menu = document.getElementById('mobile-menu');
                btn.addEventListener('click', function () {
                    menu.classList.toggle('hidden');
                });
            });
        </script>
    </nav>
</header>
<div class="flex-1">
    <main class="max-w-7xl mx-auto px-4 py-8">
        @RenderBody()
    </main>
</div>
<footer class="border-t bg-white text-gray-500 py-4 mt-8">
    <div class="max-w-7xl mx-auto px-4">
        &copy; 2025 - cutypai - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600">Privacy</a>
    </div>
</footer>
@await RenderSectionAsync("Scripts", false)
</body>
</html>