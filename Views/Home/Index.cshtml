@{
    ViewData["Title"] = "Home Page";
}

<div class="w-full min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-500">

    <!-- Hero Section -->
    <div class="max-w-6xl mx-auto px-6 py-16 text-center">
        <h1 class="text-5xl md:text-7xl font-extrabold mb-6">
            Welcome to <span class="text-green-600 dark:text-green-400">CutyPai AI Hub</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 mb-10 italic">
            "AI is not just intelligence; it’s inspiration coded into algorithms."
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button class="px-6 py-3 bg-green-600 dark:bg-green-500 text-white font-semibold rounded-lg shadow-lg hover:bg-green-700 dark:hover:bg-green-600 transition">
                Explore AI Projects
            </button>
            <button class="px-6 py-3 border border-green-600 dark:border-green-400 text-green-700 dark:text-green-300 font-semibold rounded-lg hover:bg-green-100 dark:hover:bg-green-600 hover:text-green-800 dark:hover:text-white transition">
                Learn More
            </button>
        </div>
    </div>

    <!-- Stats Container -->
    <div class="max-w-6xl mx-auto px-6 mb-20">
        <div class="grid md:grid-cols-4 gap-6 bg-gray-100 dark:bg-gray-800 rounded-2xl p-8 shadow-lg text-center">
            <div>
                <p class="text-3xl font-bold text-green-600 dark:text-green-400">42</p>
                <p class="text-gray-700 dark:text-gray-300">Active Contests</p>
            </div>
            <div>
                <p class="text-3xl font-bold text-green-600 dark:text-green-400">3.2k</p>
                <p class="text-gray-700 dark:text-gray-300">Registered Users</p>
            </div>
            <div>
                <p class="text-3xl font-bold text-green-600 dark:text-green-400">128</p>
                <p class="text-gray-700 dark:text-gray-300">Problems Online</p>
            </div>
            <div>
                <p class="text-3xl font-bold text-green-600 dark:text-green-400">99.9%</p>
                <p class="text-gray-700 dark:text-gray-300">Uptime</p>
            </div>
        </div>
    </div>

    <!-- Dynamic Informative Banner -->
    <div class="w-full overflow-hidden bg-green-600 dark:bg-green-500 py-3 mb-20">
        <div class="animate-marquee whitespace-nowrap text-white text-lg font-medium">
            <span class="mx-8">🚀 AI is shaping industries — Be part of the revolution!</span>
            <span class="mx-8">💡 Learn Deep Learning, Machine Learning, and AI Ethics.</span>
            <span class="mx-8">🤖 Build innovative projects with Neural Networks.</span>
            <span class="mx-8">🌍 Connecting AI communities across the globe!</span>
        </div>
    </div>

