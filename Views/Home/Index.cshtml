@{
    ViewData["Title"] = "Cutypai - Your AI Companion";
}

<div class="w-full min-h-screen bg-gradient-to-br from-amber-50 to-stone-100 dark:from-stone-900 dark:to-stone-800 text-stone-800 dark:text-stone-200 transition-colors duration-500">

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="fixed top-20 right-4 z-50 max-w-md">
            <div class="bg-emerald-100 border border-emerald-400 text-emerald-700 px-4 py-3 rounded-lg shadow-lg mb-4" role="alert">
                <div class="flex items-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    <span>@TempData["SuccessMessage"]</span>
                    <button type="button" class="ml-auto text-emerald-700 hover:text-emerald-900" onclick="this.parentElement.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="fixed top-20 right-4 z-50 max-w-md">
            <div class="bg-sky-100 border border-sky-400 text-sky-700 px-4 py-3 rounded-lg shadow-lg mb-4" role="alert">
                <div class="flex items-center">
                    <i class="fas fa-info-circle mr-2"></i>
                    <span>@TempData["InfoMessage"]</span>
                    <button type="button" class="ml-auto text-sky-700 hover:text-sky-900" onclick="this.parentElement.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Hero Section -->
    <section class="max-w-6xl mx-auto px-6 py-16 text-center">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="animate-fade-in-up">
                <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-amber-600 to-amber-800 dark:from-amber-400 dark:to-amber-300">
                    Welcome back, <span class="text-amber-700 dark:text-amber-400">@User.Identity.Name</span>!
                </h1>
                <p class="text-xl md:text-2xl text-stone-600 dark:text-stone-300 mb-10 italic">
                    "Ready to continue your conversation with Cutypai?"
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a asp-controller="Auth" asp-action="Profile" class="px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-700 text-white font-semibold rounded-full shadow-lg hover:from-amber-600 hover:to-amber-800 transition-all transform hover:-translate-y-1">
                        View Profile
                    </a>
                    <a href="https://cutypai.vercel.app" target="_blank">
