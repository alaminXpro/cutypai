        <script>
            (function () {
              const track = document.getElementById('articlesTrack');
              const cards = track.querySelectorAll('.card');
              const nextBtn = document.getElementById('nextBtn');
              const prevBtn = document.getElementById('prevBtn');
              const nextBtnMobile = document.getElementById('nextBtnMobile');
              const prevBtnMobile = document.getElementById('prevBtnMobile');

              // compute step = first card width + gap
              function getStep() {
                const first = cards[0];
                const style = getComputedStyle(track);
                const gap = parseFloat(style.gap || style.columnGap || '24');
                return Math.round(first.getBoundingClientRect().width + gap);
              }

              function scrollByDir(dir = 1) {
                const step = getStep();
                track.scrollTo({ left: track.scrollLeft + step * dir, behavior: 'smooth' });
              }

              // bind buttons
              [nextBtn, nextBtnMobile].forEach(btn => btn && btn.addEventListener('click', () => scrollByDir(1)));
              [prevBtn, prevBtnMobile].forEach(btn => btn && btn.addEventListener('click', () => scrollByDir(-1)));

              // keyboard arrow navigation when focused
              track.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowRight') { e.preventDefault(); scrollByDir(1); }
                if (e.key === 'ArrowLeft')  { e.preventDefault(); scrollByDir(-1); }
              });

              // optional autoplay (one-by-one). pauses on hover / focus / tab hidden
              let autoplayInterval = 3500;
              let autoplayId = null;
              function startAutoplay() {
                if (autoplayId) return;
                autoplayId = setInterval(() => {
                  // stop autoplay if already at very end (keeps it moving cyclically)
                  const maxScroll = track.scrollWidth - track.clientWidth;
                  if (Math.abs(track.scrollLeft - maxScroll) < 5) {
                    track.scrollTo({ left: 0, behavior: 'smooth' });
                  } else {
                    scrollByDir(1);
                  }
                }, autoplayInterval);
              }
              function stopAutoplay() {
                if (!autoplayId) return;
                clearInterval(autoplayId);
                autoplayId = null;
              }

              track.addEventListener('mouseenter', stopAutoplay);
              track.addEventListener('mouseleave', startAutoplay);
              track.addEventListener('focusin', stopAutoplay);
              track.addEventListener('focusout', startAutoplay);

              document.addEventListener('visibilitychange', () => {
                if (document.hidden) stopAutoplay(); else startAutoplay();
              });

              // kick off autoplay on load
              startAutoplay();
            })();
        </script>
