@{
    ViewData["Title"] = "Help";
}

<div class="min-h-screen bg-white dark:bg-gray-900 transition-colors duration-500">
    <!-- Hero Section -->
    <section class="text-center py-16 px-6">
        <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white mb-4 animate-fadeIn">
            Need Help? We've Got You Covered
        </h1>
        <p class="text-lg text-gray-700 dark:text-gray-300 max-w-2xl mx-auto animate-slideUp">
            Whether you're exploring AI concepts or need help navigating our platform,
            this Help Center is your guide to understanding everything better.
        </p>
    </section>

    <!-- Help Topics -->
    <div class="max-w-6xl mx-auto px-6 space-y-16">
        <!-- Topic 1 -->
        <div class="flex flex-col md:flex-row items-center gap-8 animate-slideRight">
            <img src="https://cdn01.alison-static.net/courses/6565/alison_courseware_intro_6565.jpg" alt="AI Basics"
                 class="rounded-xl shadow-lg w-full md:w-1/3 object-cover">
            <div class="w-full md:w-2/3">
                <h2 class="text-2xl font-bold text-green-600 dark:text-green-400 mb-4">
                    Understanding AI Basics
                </h2>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    Dive into the fundamentals of artificial intelligence.
                    From machine learning to neural networks, we provide easy-to-understand
                    resources to get you started.
                </p>
            </div>
        </div>

        <!-- Topic 2 -->
        <div class="flex flex-col md:flex-row-reverse items-center gap-8 animate-slideLeft">
            <img src="https://services.travo.ng/wp-content/uploads/2025/05/iStock-1412974551-300x200.jpg" alt="Platform Guide"
                 class="rounded-xl shadow-lg w-full md:w-1/3 object-cover">
            <div class="w-full md:w-2/3">
                <h2 class="text-2xl font-bold text-green-600 dark:text-green-400 mb-4">
                    Platform Navigation
                </h2>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    Learn how to navigate through our AI-powered platform.
                    We’ve simplified the experience with step-by-step tutorials
                    and smart search to get answers faster.
                </p>
            </div>
        </div>

        <!-- Topic 3 -->
        <div class="flex flex-col md:flex-row items-center gap-8 animate-slideRight">
            <img src="https://miro.medium.com/1*viH6Xse-ttPIkkR1nYiKVg.jpeg" alt="Advanced Topics"
                 class="rounded-xl shadow-lg w-full md:w-1/3 object-cover">
            <div class="w-full md:w-2/3">
                <h2 class="text-2xl font-bold text-green-600 dark:text-green-400 mb-4">
                    Advanced AI Topics
                </h2>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    Explore deep learning, natural language processing,
                    and generative AI with hands-on examples and
                    easy-to-follow guides for learners and developers.
                </p>
            </div>
        </div>
    </div>

    <!-- Footer CTA -->
    <div class="text-center mt-20 py-12 bg-gray-100 dark:bg-gray-800 rounded-t-2xl">
        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4 animate-fadeIn">
            Still Have Questions?
        </h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6 animate-slideUp">
            Reach out to our support team or browse our detailed documentation for more guidance.
        </p>
        <a href="/Contact"
           class="px-6 py-3 rounded-xl bg-green-600 text-white hover:bg-green-700 transition">
            Contact Support
        </a>
    </div>
</div>

<!-- Animations -->
<style>
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
    @@keyframes slideRight {
        from

    {
        opacity: 0;
        transform: translateX(-30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }
    @@keyframes slideLeft {
        from

    {
        opacity: 0;
        transform: translateX(30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    .animate-fadeIn {
        animation: fadeIn 1s ease-in-out forwards;
    }

    .animate-slideUp {
        animation: slideUp 1s ease-in-out forwards;
    }

    .animate-slideRight {
        animation: slideRight 1s ease-in-out forwards;
    }

    .animate-slideLeft {
        animation: slideLeft 1s ease-in-out forwards;
    }
</style>
