@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cutypai Travels</title>

    <!-- Tailwind CSS v4 -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100 min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 shadow-md">
        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
            <h1 class="text-2xl font-bold text-blue-600">Cutypai Travels</h1>
            <nav class="space-x-6">
                <a href="#" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 transition">Destinations</a>
                <a href="#" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 transition">Adventures</a>
                <a href="#" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 transition">AI Planning</a>
                <a href="#" class="text-gray-700 dark:text-gray-200 hover:text-blue-600 dark:hover:text-blue-400 transition">About</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 max-w-7xl mx-auto px-6 py-10 space-y-10">

        <!-- Single column section -->
        <section class="space-y-4">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
                Unveiling hidden gems: Exploring off-the-beaten-path destinations
            </h2>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla facilisi. Vivamus non sapien ut nunc ultricies
                hendrerit. Suspendisse at viverra lorem. Aliquam erat volutpat.
            </p>
            <div class="border-l-4 border-blue-500 bg-blue-50 dark:bg-gray-800 p-3 rounded-md transition hover:shadow-md">
                <p class="text-sm text-gray-700 dark:text-gray-200">
                    <strong>Note:</strong> An ID is here.
                </p>
            </div>
        </section>

        <!-- Separator -->
        <hr class="border-gray-300 dark:border-gray-700" />

        <!-- Two-column section -->
        <section class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Left column -->
            <div class="space-y-3">
                <h3 class="text-2xl font-semibold">
                    Unveiling hidden gems: Exploring off-the-beaten-path destinations
                </h3>
                <div class="border-l-4 border-green-500 bg-green-50 dark:bg-gray-800 p-3 rounded-md transition hover:shadow-md">
                    <p class="text-sm text-gray-700 dark:text-gray-200">
                        <strong>Note:</strong> An ID is here.
                    </p>
                </div>
            </div>

            <!-- Right column -->
            <div class="space-y-3">
                <h3 class="text-2xl font-semibold">
                    Conquer the wild: Exploring terrains and conquering nature
                </h3>
                <div class="border-l-4 border-purple-500 bg-purple-50 dark:bg-gray-800 p-3 rounded-md transition hover:shadow-md">
                    <p class="text-sm text-gray-700 dark:text-gray-200">
                        <strong>Note:</strong> An ID is here.
                    </p>
                </div>
            </div>
        </section>

    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 shadow-inner mt-10">
        <div class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-600 dark:text-gray-400 text-sm">
            © 2025 Cutypai Travels. All rights reserved.
        </div>
    </footer>

</body>
</html>
