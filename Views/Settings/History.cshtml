@model List<cutypai.Models.SettingsAudit>
@{
    ViewData["Title"] = "Settings History";
}

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Settings History</h1>
                    <p class="mt-2 text-gray-600 dark:text-gray-300">Track all changes made to AI prompts and settings.</p>
                </div>
                <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Settings
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <!-- History List -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
            @if (Model.Any())
            {
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-medium text-gray-900 dark:text-white">Recent Changes (@Model.Count)</h2>
                </div>

                <div class="divide-y divide-gray-200 dark:divide-gray-700">
                    @foreach (var audit in Model)
                    {
                        <div class="p-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3 mb-2">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetActionBadgeClass(audit.Action)">
                                            @if (audit.Action.ToLower() == "created")
                                            {
                                                <i class="fas fa-plus mr-1"></i>
                                            }
                                            else if (audit.Action.ToLower() == "updated")
                                            {
                                                <i class="fas fa-edit mr-1"></i>
                                            }
                                            else if (audit.Action.ToLower() == "reset")
                                            {
                                                <i class="fas fa-undo mr-1"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-circle mr-1"></i>
                                            }
                                            @audit.Action.ToUpper()
                                        </span>
                                        <span class="text-sm text-gray-500 dark:text-gray-400">
                                            by <strong>@audit.UserName</strong>
                                        </span>
                                        <span class="text-sm text-gray-500 dark:text-gray-400">
                                            on @audit.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                                        </span>
                                    </div>

                                    @if (audit.Changes.Any())
                                    {
                                        <div class="mt-3">
                                            <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Changes Made:</h4>
                                            <ul class="space-y-1">
                                                @foreach (var change in audit.Changes)
                                                {
                                                    <li class="text-sm text-gray-600 dark:text-gray-300">
                                                        <span class="font-medium">@change.Field:</span> @change.ChangeSummary
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(audit.IpAddress))
                                    {
                                        <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                                            <i class="fas fa-globe mr-1"></i>IP: @audit.IpAddress
                                        </div>
                                    }
                                </div>

                                <div class="ml-4">
                                    <button type="button" onclick="toggleDetails('@audit.Id')" 
                                            class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                        <i class="fas fa-chevron-down" id="icon-@audit.Id"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Detailed View (Collapsible) -->
                            <div id="details-@audit.Id" class="hidden mt-4 pt-4 border-t border-gray-200 dark:border-gray-600">
                                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                                    <!-- System Prompt Changes -->
                                    @if (!string.IsNullOrEmpty(audit.OldSystemPrompt) || !string.IsNullOrEmpty(audit.NewSystemPrompt))
                                    {
                                        <div>
                                            <h5 class="text-sm font-medium text-gray-900 dark:text-white mb-2">System Prompt</h5>
                                            <div class="space-y-3">
                                                @if (!string.IsNullOrEmpty(audit.OldSystemPrompt))
                                                {
                                                    <div>
                                                        <label class="text-xs font-medium text-red-600 dark:text-red-400">Before:</label>
                                                        <div class="mt-1 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md">
                                                            <pre class="text-xs text-red-800 dark:text-red-200 whitespace-pre-wrap">@audit.OldSystemPrompt</pre>
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(audit.NewSystemPrompt))
                                                {
                                                    <div>
                                                        <label class="text-xs font-medium text-green-600 dark:text-green-400">After:</label>
                                                        <div class="mt-1 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-md">
                                                            <pre class="text-xs text-green-800 dark:text-green-200 whitespace-pre-wrap">@audit.NewSystemPrompt</pre>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                    <!-- Instructions Changes -->
                                    @if (!string.IsNullOrEmpty(audit.OldInstructions) || !string.IsNullOrEmpty(audit.NewInstructions))
                                    {
                                        <div>
                                            <h5 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Instructions</h5>
                                            <div class="space-y-3">
                                                @if (!string.IsNullOrEmpty(audit.OldInstructions))
                                                {
                                                    <div>
                                                        <label class="text-xs font-medium text-red-600 dark:text-red-400">Before:</label>
                                                        <div class="mt-1 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md">
                                                            <pre class="text-xs text-red-800 dark:text-red-200 whitespace-pre-wrap">@audit.OldInstructions</pre>
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(audit.NewInstructions))
                                                {
                                                    <div>
                                                        <label class="text-xs font-medium text-green-600 dark:text-green-400">After:</label>
                                                        <div class="mt-1 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-md">
                                                            <pre class="text-xs text-green-800 dark:text-green-200 whitespace-pre-wrap">@audit.NewInstructions</pre>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="p-12 text-center">
                    <i class="fas fa-history text-4xl text-gray-400 dark:text-gray-500 mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No History Found</h3>
                    <p class="text-gray-500 dark:text-gray-400">No changes have been made to the settings yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleDetails(auditId) {
            const details = document.getElementById('details-' + auditId);
            const icon = document.getElementById('icon-' + auditId);
            
            if (details.classList.contains('hidden')) {
                details.classList.remove('hidden');
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            } else {
                details.classList.add('hidden');
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            }
        }
    </script>
}

@functions {
    private string GetActionBadgeClass(string action)
    {
        return action.ToLower() switch
        {
            "created" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200",
            "updated" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200",
            "reset" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200",
            _ => "bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200"
        };
    }

}
