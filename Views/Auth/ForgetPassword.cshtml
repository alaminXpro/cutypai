@model cutypai.Models.ForgetPasswordRequest
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Forgot your password?
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Enter your email address and we'll send you a link to reset your password.
                </p>
            </div>

            <div class="mt-8">
                <form asp-action="ForgetPassword" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">
                            Email address
                        </label>
                        <div class="mt-1">
                            <input asp-for="Email"
                                   type="email"
                                   autocomplete="email"
                                   required
                                   class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                   placeholder="Enter your email address">
                        </div>
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <button type="submit"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Send reset link
                        </button>
                    </div>

                    <div class="mt-6">
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-2 bg-white text-gray-500">Or</span>
                            </div>
                        </div>

                        <div class="mt-6 text-center">
                            <a asp-action="Login" class="text-blue-600 hover:text-blue-500 text-sm font-medium">
                                Back to login
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
